{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "noImplicitAny": true,
    "sourceMap": true,
  },
  "include": ["./src/**/*"],
}